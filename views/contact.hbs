<div class="container">

  <div class="row">
    <form method="POST" class="text-white container col-6 bg-dark py-4 col-11 col-md-8 col-lg-6 mt-5">
      {{#each arrayAlert}}
      <p>{{msg}}</p>
      {{/each}}
      <div class="form-group mt-3 mb-5">
        <label for="email">Email</label>
        <input
        name="email"
          type="email"
          class="form-control"
          id="email"
          placeholder="email@ejemplo.com"
         {{#if formData.email}}
         value="{{formData.email}}" {{/if}}
        />
      </div>

      <div class="form-group mt-5 mb-5">
        <label for="message">Mensaje</label>
        <textarea
        name="message"
          class="form-control"
          id="message"
          rows="10"
          cols="30"
        >{{#if formData.message}}{{formData.message}}{{/if}}</textarea>
       
          
          
         
      </div>
    
    <div class="text-center">
     {{#if successMessage}} <div class="alert alert-secondary " role="alert">{{successMessage}}</div>  {{/if}}

      <input type="submit" value="enviar" class="btn btn-light justify-content-center">
       </div>

    </form>
  </div>
</div>
  
